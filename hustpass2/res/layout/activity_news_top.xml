<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/news_top_image_view"
        android:layout_width="match_parent"
        android:layout_height="180dp" >
        <ImageView
            android:id="@+id/news_top_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <!--<ProgressBar-->
            <!--android:id="@+id/progressBar1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_centerVertical="true" />-->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_item_height"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/news_top_icon"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/home_news_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/news_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="阿卡撒旦哈达控件费哈"
                android:textColor="#696969"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/news_list_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"
                android:text="阿卡撒旦哈达控件阿卡撒旦哈达控件阿卡撒旦哈达控件费哈"
                android:textColor="#696969"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>