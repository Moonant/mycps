<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/account_padding"
    android:paddingRight="@dimen/account_padding" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_weight="1"
        android:src="@drawable/account_name_hust" />

    <EditText
        android:id="@+id/account_username"
        style="@style/app_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_marginBottom="15dp"
        android:hint="@string/account_username" />
    <TextView
        android:id="@+id/account_alert_username"
        style="@style/account_alert_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/account_email"
        style="@style/app_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_marginBottom="15dp"
        android:hint="@string/account_email" />
    <TextView
        android:id="@+id/account_alert_email"
        style="@style/account_alert_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/account_psw"
        style="@style/app_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_marginBottom="15dp"
        android:inputType="textPassword"
        android:hint="@string/account_psw" />
    <TextView
        android:id="@+id/account_alert_psw"
        style="@style/account_alert_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/account_psw_twice"
        style="@style/app_edit"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="@dimen/edit_height"
        android:layout_marginBottom="15dp"
        android:hint="@string/account_psw_twice" />

    <TextView
        android:id="@+id/account_alert_psw_twice"
        style="@style/account_alert_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/account_login"
            style="@style/app_btn_white"
            android:layout_width="0dp"
            android:layout_marginRight="23dp"
            android:layout_weight="1"
            android:text="@string/account_login" />

        <TextView
            android:id="@+id/account_reg"
            style="@style/app_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/account_reg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout><!-- From: file:/home/ant/androidWS/hustpass2/hustpass2/res/layout/activity_account_hust_reg.xml -->