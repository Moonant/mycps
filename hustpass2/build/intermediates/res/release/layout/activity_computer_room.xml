<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/computer_title_dong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            
            android:gravity="center"
            android:text="东校区"
            android:textColor="#9e9e9e"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/computer_title_zhu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/classroom_top_btn_bg_r_l"
            android:text="主校区"
            android:textColor="@color/white"
            android:textSize="19sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:text="用机状况"
        android:textColor="#c5c5c5"
        android:textSize="22sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/computer_divider_line_grey" />

    <ListView
        android:id="@+id/computer_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:divider="@drawable/computer_divider_line_grey">
    </ListView>
    <TextView
        android:id="@+id/listview_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/app_text_middle"
        android:text="@string/api_error"
        />

    <!--<include layout="@layout/listview_emptyview2" />-->

</LinearLayout><!-- From: file:/home/ant/androidWS/hustpass2/hustpass2/res/layout/activity_computer_room.xml -->