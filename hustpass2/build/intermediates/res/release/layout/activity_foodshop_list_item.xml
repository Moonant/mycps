<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7E2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="3dp"
            android:paddingRight="18dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="机密便当"
                android:textColor="@color/foodshop_item_color_blue"
                android:textSize="22sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/foodshop_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="观赏路XXX号"
                    android:textColor="#9e9e9e"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/foodshop_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/foodshop_item_bar_blue"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="愿意额建   10：00-17：30"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:layout_width="10.5dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:src="@drawable/foodshop_item_next" />
    </LinearLayout>

</LinearLayout><!-- From: file:/home/ant/androidWS/hustpass2/hustpass2/res/layout/activity_foodshop_list_item.xml -->