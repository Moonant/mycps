<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_item_height"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/news_list_img"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/news_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="阿卡撒旦哈达控件费哈"
                android:textColor="@color/news_item_text_color"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/news_list_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"
                android:text="阿卡撒旦哈达控件阿卡撒旦哈达控件阿卡撒旦哈达控件费哈"
                android:textColor="@color/news_item_text_color"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

