<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/account_padding"
    android:paddingRight="@dimen/account_padding">


    <ImageView
        style="@style/account_title_img"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:src="@drawable/elec_search_title" />

    <TextView
        android:id="@+id/elec_slec_xiaoqu"
        style="@style/app_btn_white"
        android:background="@drawable/app_edit_shape_grey"
        android:layout_marginBottom="10dp"
        android:text="校区" />


    <EditText
        android:id="@+id/elec_text_building"
        android:layout_marginBottom="10dp"
        style="@style/app_edit"
        android:hint="楼栋" />
    <EditText
        android:id="@+id/elec_text_room"
        style="@style/app_edit"
        android:layout_marginBottom="10dp"
        android:hint="宿舍" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/account_btn_cancle"
            style="@style/app_btn_white"
            android:layout_width="0dp"
            android:layout_marginRight="23dp"
            android:layout_weight="1"
            android:text="暂不绑定" />

        <TextView
            android:id="@+id/account_btn_bound"
            style="@style/app_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/account_bound" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
</LinearLayout><!-- From: file:/home/harry/android/hustpass-2.X/hustpass2/res/layout/activity_account_bound_elec.xml -->