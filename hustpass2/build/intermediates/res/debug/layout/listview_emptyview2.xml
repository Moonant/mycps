<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/empty_view_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#717171"
            android:visibility="visible" />

        <Button
            android:id="@+id/empty_view_btn_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/empty_view_img"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_above="@+id/empty_view_text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/home/harry/android/hustpass-2.X/hustpass2/res/layout/listview_emptyview2.xml -->